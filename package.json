{
  "name": "helixque-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "prepare": "husky install",
    "lint:frontend": "cd frontend && npm run lint",
    "check:backend": "cd backend && npm run build",
    "precommit": "npx lint-staged"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx,jsx}": "eslint --fix"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "eslint": "^8.50.0",
    "eslint-config-next": "^15.0.0"
  }
}
